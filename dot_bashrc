
echo "...running .bashrc..."

# We want to use nvim
alias vi=nvim

# Set up zoxide - improved cd - uses "z" in the shell - see https://github.com/ajeetdsouza/zoxide
if [[ -f /opt/homebrew/bin/zoxide || -f ~/.local/bin/zoxide || -f /usr/bin/zoxide ]]; then
    echo "...setting up zoxide..."
    export _ZO_ECHO=1
    eval "$(zoxide init bash)"
else
    echo "--> zoxide not found!"
fi

export PS1="git-bash> "

# Tell neovim this is a bash script
# vim:ft=bash
