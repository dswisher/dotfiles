
echo "...running .bashrc..."


# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac


# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000


# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize


# I want to use nvim
# TODO: only set this if neovim is available
alias vi=nvim


# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi


# Reset window title before display prompt
# TODO: make this smarter - needs different value on WSL and Mac and whatnot!
export PROMPT_COMMAND='echo -ne "\033]0;git-bash\007"'

# A simple prompt
# TODO: make this smarter - needs different value on WSL and Mac and whatnot!
export PS1="git-bash> "


# If rust is installed, configure it
if [ -f $HOME/.cargo/env ]; then
    . "$HOME/.cargo/env"
fi


# Set up zoxide - improved cd - uses "z" in the shell - see https://github.com/ajeetdsouza/zoxide
# This should be near the end of the script
if [[ -f /opt/homebrew/bin/zoxide || -f ~/.local/bin/zoxide || -f /usr/bin/zoxide ]]; then
    export _ZO_ECHO=1
    eval "$(zoxide init bash)"
fi


# Tell neovim this is a bash script
# vim:ft=bash
