{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "edit": "ask",
        "read": "allow",
        "grep": "allow",
        "glob": "allow",
        "list": "allow",
        "bash": {
            "git diff": "allow",
            "git status": "allow"
        },
        "task": "ask",
        "webfetch": "allow",
        "websearch": "ask",
        "external_directory": "ask"
    },
    "keybinds": {
        "leader": "ctrl+space"
    },
    "enabled_providers": ["amazon-bedrock", "github-copilot"]
}
