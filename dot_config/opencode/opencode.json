{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "edit": "ask",
        "read": "allow",
        "grep": "allow",
        "glob": "allow",
        "list": "allow",
        "bash": "ask",
        "task": "ask",
        "webfetch": "allow",
        "websearch": "ask",
        "external_directory": "ask"
    },
    "keybinds": {
        "leader": "ctrl+space"
    },
    "provider": {
        "openrouter": {
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "https://openrouter.ai/api/v1"
            }
        }
    }
}
